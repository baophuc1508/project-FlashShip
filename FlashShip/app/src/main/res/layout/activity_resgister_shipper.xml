<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shipper.ResgisterShipper"
    android:background="@drawable/gradient">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <ImageView
               android:id="@+id/imageAvatarShipper"
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:src="@drawable/avatar"
               android:layout_marginTop="56dp"
               android:layout_gravity="center" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Chọn Ảnh Đại Diện"
               android:layout_gravity="center"
               android:layout_marginTop="8dp"
               android:textColor="#000000"/>

           <EditText
               android:id="@+id/txtHoTenShipper"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:background="@drawable/custom_edittext"
               android:hint="Họ và Tên"
               android:paddingLeft="16dp"
               android:layout_marginTop="24dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"/>

           <EditText
               android:id="@+id/txtSdtShipper"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:background="@drawable/custom_edittext"
               android:hint="Số Điện Thoại"
               android:paddingLeft="16dp"
               android:layout_marginTop="12dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"/>

           <EditText
               android:id="@+id/txtMKhauShipper"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:background="@drawable/custom_edittext"
               android:hint="Mật Khẩu"
               android:paddingLeft="16dp"
               android:layout_marginTop="12dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"/>

           <EditText
               android:id="@+id/txtAgainShipper"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:background="@drawable/custom_edittext"
               android:hint="Nhập Lại Mật Khẩu"
               android:paddingLeft="16dp"
               android:layout_marginTop="12dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"/>

           <EditText
               android:id="@+id/txtBienSoShipper"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:background="@drawable/custom_edittext"
               android:hint="Biển Số"
               android:paddingLeft="16dp"
               android:layout_marginTop="12dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"/>

           <Button
               android:id="@+id/btnResgisterShipper"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:background="@drawable/custom_btnlogin"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:layout_marginTop="48dp"
               android:text="ĐĂNG KÍ"/>
       </LinearLayout>
    </ScrollView>

</FrameLayout>